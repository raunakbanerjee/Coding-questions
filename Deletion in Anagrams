#include <bits/stdc++.h>
using namespace std;

int main()
{
  string one,two;
  cin>>one>>two;
    
    int value;

    int one_arr[26]={0};
    int two_arr[26]={0};
    
    //entering values in arrays;
    for(int i=0;i<(one.length());i++){
        value=one[i]-97;  //entering one character of string in the variable called value
        one_arr[value]++;
         // updating the index of the array with index that value has
    }
        
        for(int i=0;i<(two.length());i++){
        value=two[i]-97;  
        two_arr[value]++;
    }
    int s=0;
    for(int i=0;i<26;i++)
{
    s=s+abs(one_arr[i]-two_arr[i]);
}
cout<<s;
    return 0;
    }
    
  
